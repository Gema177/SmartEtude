# =============================================================================
# CONFIGURATION DE L'ENVIRONNEMENT - SMARTETUDE
# =============================================================================
# Copiez ce fichier vers .env et configurez vos variables d'environnement
# cp env.example .env

# =============================================================================
# CONFIGURATION DJANGO DE BASE
# =============================================================================

# Clé secrète Django (GÉNÉREZ UNE NOUVELLE CLÉ POUR LA PRODUCTION !)
SECRET_KEY=your-super-secret-key-here-change-in-production

# Mode debug (False en production)
DEBUG=True

# Hôtes autorisés (séparés par des virgules)
# Utilisez '*' pour accepter tous les hôtes en développement
ALLOWED_HOSTS=*

# =============================================================================
# CONFIGURATION DE LA BASE DE DONNÉES
# =============================================================================

# Moteur de base de données
DB_ENGINE=django.db.backends.sqlite3

# Nom de la base de données
DB_NAME=db.sqlite3

# Utilisateur de la base de données (pour PostgreSQL/MySQL)
DB_USER=

# Mot de passe de la base de données (pour PostgreSQL/MySQL)
DB_PASSWORD=

# Hôte de la base de données (pour PostgreSQL/MySQL)
DB_HOST=

# Port de la base de données (pour PostgreSQL/MySQL)
DB_PORT=

# =============================================================================
# CONFIGURATION REDIS ET CACHE
# =============================================================================

# URL Redis pour le cache et Celery
REDIS_URL=redis://127.0.0.1:6379/1

# Backend de cache
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache

# =============================================================================
# CONFIGURATION CELERY
# =============================================================================

# Broker Redis pour Celery
CELERY_BROKER_URL=redis://127.0.0.1:6379/0

# Backend de résultats Celery
CELERY_RESULT_BACKEND=django-db

# =============================================================================
# CONFIGURATION IA (OpenAI)
# =============================================================================

# Clé API OpenAI (obtenez-la sur https://platform.openai.com/)
OPENAI_API_KEY=your-openai-api-key-here

# URL de l'API OpenAI (par défaut)
OPENAI_BASE_URL=https://api.openai.com

# Modèle IA par défaut
AI_MODEL=gpt-4o-mini

# Nombre maximum de tokens pour les réponses IA
AI_MAX_TOKENS=800

# =============================================================================
# CONFIGURATION DE SÉCURITÉ ET MONITORING
# =============================================================================

# DSN Sentry pour le monitoring (optionnel)
SENTRY_DSN=

# =============================================================================
# CONFIGURATION EMAIL (optionnel)
# =============================================================================

# Configuration SMTP pour l'envoi d'emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# CONFIGURATION PRODUCTION (à activer en production)
# =============================================================================

# HTTPS et sécurité
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Configuration des cookies sécurisés
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# PAIEMENTS LYGOS (MOBILE MONEY)
# =============================================================================

# Clé API Lygos (obtenez-la depuis le dashboard Lygos)
LYGOS_API_KEY=

# Base URL de l'API Lygos (production)
LYGOS_BASE_URL=https://api.lygosapp.com/v1/

# Opérateurs supportés (séparés par des virgules)
LYGOS_SUPPORTED_OPERATORS=MTN,AIRTEL_CONGO

# Secret de signature Webhook (si fourni par Lygos)
LYGOS_WEBHOOK_SECRET=
